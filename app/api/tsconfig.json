{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": false,
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": ["src/**/*.ts", "@types/**/*.d.ts", "eslint.config.ts", "prisma.config.ts"],
  "exclude": ["node_modules"]
}
